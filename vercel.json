{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/python-api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/dist/assets/$1"
    },
    {
      "src": "/personajes/(.*)",
      "dest": "frontend/dist/personajes/$1"
    },
    {
      "src": "/partners/(.*)",
      "dest": "frontend/dist/partners/$1"
    },
    {
      "src": "/certificaciones/(.*)",
      "dest": "frontend/dist/certificaciones/$1"
    },
    {
      "src": "/trabajos/(.*)",
      "dest": "frontend/dist/trabajos/$1"
    },
    {
      "src": "/.*\\.(js|css|png|jpg|jpeg|gif|svg|webp|ico|json|woff|woff2|ttf|eot)",
      "dest": "frontend/dist/$0"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
